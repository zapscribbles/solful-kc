<ul>
    {% for post in collections.blog_posts %}
        <li>
            <strong>
                <a href="{{ post.url | url }}">{{ post.data.title }}</a>
            </strong>
            -
            <span>
                {{ post.data.description }}
            </span>
        </li>
    {% endfor %}
</ul>
